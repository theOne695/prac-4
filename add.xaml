<Window x:Class="WpfApp7.add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="add" Height="250" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите название нового типа записи:" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="15"/>
        <TextBox x:Name="addadd" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="400"/>
        <Button x:Name="addd" Content="Добавить новый тип" Width="200" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" FontSize="15" Click="addd_Click"/>
    </Grid>
</Window>
